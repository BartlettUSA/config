{
  "codeExecution": {
    "enabled": true
  },
  "tools": {
    "exclude": [
      "format",
      "diskpart",
      "bcdedit",
      "reg add",
      "reg delete",
      "regedit",
      "sc create",
      "sc config",
      "sc delete",
      "net user",
      "net localgroup",
      "shutdown",
      "restart",
      "powercfg",
      "rm -rf /",
      "sudo rm -rf",
      "mkfs",
      "dd if="
    ]
  },
  "mcpServers": {
    "MCP_DOCKER": {
      "command": "docker",
      "args": ["mcp", "gateway", "run"]
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"]
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "{{SECRET:GITHUB_PERSONAL_ACCESS_TOKEN}}"
      }
    }
  }
}
